            async: true,
            timeout: 1000000,
                data: { anio: year, mes: month, dia: day },
                type: "POST",
                }).done(function (res) {

                });
            }

            function consultarDescarga() {


            var _FechaCorte=$("#FechaCorte").datepicker("getDate");
            var year = _FechaCorte.getFullYear();
            var month = _FechaCorte.getMonth() + 1;
            var day = _FechaCorte.getDate();

            $.ajax({
            type: 'POST',
            url: '@Url.Action("ConsultarExtraccion", "CalculoComision")',
            timeout: 1000000,
                data: { anio: year, mes: month, dia: day },
                type: "POST",
            }).done(function (res) {
                if (res.Extraccion.EstadoExtraccion == 0) {
                    $('#mensaje1').hide();
                    $('#mensaje2').hide();
                    $('#mensaje4').hide();
                    $('#mensaje5').hide();
                    $('#lblTipoLiquidacion').show();
                    $('#divTipoLiquidacion').show();
                    $('#btnDescarga').show();
                    $('#btnHistorico').hide();
                    $('#divLiquidacion').hide();
                } else if (res.Extraccion.EstadoExtraccion == 1) {
                    $('#mensaje1').show();
                    $('#mensaje2').hide();
                    $('#mensaje4').hide();
                    $('#mensaje5').hide();
                    $('#lblTipoLiquidacion').hide();
                    $('#divTipoLiquidacion').hide();
                    $('#btnDescarga').hide();
                    $('#btnHistorico').hide();
                    $('#divLiquidacion').hide();
                    $('#FechaCorte').hide();
                    $('#btnFecha').hide();
                    $('#lblFecha').hide();
                } else if (res.Extraccion.EstadoExtraccion == 2) {
                    $('#mensaje1').hide();
                    $('#mensaje2').show();
                    $('#mensaje4').hide();
                    $('#mensaje5').hide();
                    $('#lblTipoLiquidacion').hide();
                    $('#divTipoLiquidacion').hide();
                    $('#btnDescarga').show();
                    $('#btnHistorico').hide();
                    $('#divLiquidacion').show();
                } else if (res.Extraccion.EstadoExtraccion == 4) {
                    $('#mensaje1').hide();
                    $('#mensaje2').hide();
                    $('#mensaje4').show();
                    $('#mensaje5').hide();
                    $('#lblTipoLiquidacion').hide();
                    $('#divTipoLiquidacion').hide();
                    $('#btnDescarga').hide();
                    $('#btnHistorico').show();
                    $('#divLiquidacion').hide();
                } else if (res.Extraccion.EstadoExtraccion == 5) {
                    $('#mensaje1').hide();
                    $('#mensaje2').hide();
                    $('#mensaje4').hide();
                    $('#mensaje5').show();
                    $('#lblTipoLiquidacion').hide();
                    $('#divTipoLiquidacion').hide();
                    $('#btnDescarga').hide();
                    $('#btnHistorico').hide();
                    $('#divLiquidacion').hide();
                }
                });
            }

            function consultarUltimaExtraccion() {

            $.ajax({
            type: 'POST',
            url: '@Url.Action("ConsultarUltimaExtraccion", "CalculoComision")',
            timeout: 1000000,
                data: { },
                type: "POST",
            }).done(function (res) {
                if (res.Extraccion.ExtraccionId > 0) {
                    var fecha = new Date(res.Extraccion.Fecha);
                    fecha.setMinutes(fecha.getMinutes() + fecha.getTimezoneOffset());
                    $('#FechaCorte').datepicker("setDate", fecha);

                    if (res.Extraccion.EstadoExtraccion == 0) {
                        $('#mensaje1').hide();
                        $('#mensaje2').hide();
                        $('#mensaje4').hide();
                        $('#mensaje5').hide();
                        $('#lblTipoLiquidacion').show();
                        $('#divTipoLiquidacion').show();
                        $('#btnDescarga').show();
                        $('#btnHistorico').hide();
                        $('#divLiquidacion').hide();
                    } else if (res.Extraccion.EstadoExtraccion == 1) {
                        $('#mensaje1').show();
