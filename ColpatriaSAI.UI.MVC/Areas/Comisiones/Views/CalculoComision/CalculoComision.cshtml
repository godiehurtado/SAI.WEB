                        $('#lblTipoLiquidacion').hide();
                        $('#divTipoLiquidacion').hide();
                        $('#btnDescarga').hide();
                        $('#btnHistorico').hide();
                        $('#divLiquidacion').hide();
                        $('#FechaCorte').hide();
                        $('#btnFecha').hide();
                        $('#lblFecha').hide();
                    } else if (res.Extraccion.EstadoExtraccion == 2) {
                        $('#mensaje1').hide();
                        $('#mensaje2').show();
                        $('#mensaje4').hide();
                        $('#mensaje5').hide();
                        $('#lblTipoLiquidacion').hide();
                        $('#divTipoLiquidacion').hide();
                        $('#btnDescarga').show();
                        $('#btnHistorico').hide();
                        $('#divLiquidacion').show();
                    } else if (res.Extraccion.EstadoExtraccion == 4) {
                        $('#mensaje1').hide();
                        $('#mensaje2').hide();
                        $('#mensaje4').show();
                        $('#mensaje5').hide();
                        $('#lblTipoLiquidacion').hide();
                        $('#divTipoLiquidacion').hide();
                        $('#btnDescarga').hide();
                        $('#btnHistorico').show();
                        $('#divLiquidacion').hide();
                    } else if (res.Extraccion.EstadoExtraccion == 5) {
                        $('#mensaje1').hide();
                        $('#mensaje2').hide();
                        $('#mensaje4').hide();
                        $('#mensaje5').show();
                        $('#lblTipoLiquidacion').hide();
                        $('#divTipoLiquidacion').hide();
                        $('#btnDescarga').hide();
                        $('#btnHistorico').hide();
                        $('#divLiquidacion').hide();
                    }
                }

                });
        }


